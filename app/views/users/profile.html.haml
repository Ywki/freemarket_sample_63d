.profile-wrapper
  = render 'items/header'
  .indenti-crumbs
    %ul
      %li
        = link_to "メルカリ", "https://www.yahoo.co.jp/"
        %i.icon-arrow
          = fa_icon "chevron-right"
      %li
        = link_to "マイページ", "https://www.yahoo.co.jp/"
        %i.icon-arrow
          = fa_icon "chevron-right"
      %li
        %span.indenti-list{itemprop: "title"} プロフィール
  .main-content.clearfix
    .profile
      .profile__right
        %h1.profile__right--top プロフィール
        .profile__right--bottom
          = form_with model: @user, class: 'profile-form', local: true do |f|
            .profile-name
              .profile-image
                = image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSgKIFBhPPXWTbAkgXHeVP-T_yJ5IGPxot6pdT0-DSnh3ZJOKtkeg&s", class: "profile-name-image"
              = f.text_field :nickname, class: 'profile-name__input'
            .profile-text
              = f.text_area :introduction, class: 'profile-text__input',  placeholder: '例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪'
              = f.submit '変更する', class: 'profile-text__submit'
    .mains
      .left
        .left__top
          %ul
            = link_to user_path do
              %p
                マイページ
                %i= fa_icon "chevron-right", class: "special"
            %li
              お知らせ
              %i= fa_icon "chevron-right"
            %li
              やることリスト
              %i= fa_icon "chevron-right"
            %li
              いいね！一覧
              %i= fa_icon "chevron-right"
            %li
              出品する
              %i= fa_icon "chevron-right"
            %li
              出品した商品・出品中
              %i= fa_icon "chevron-right"
            %li
              出品した商品・取引中
              %i= fa_icon "chevron-right"
            %li
              出品した商品・売却済み
              %i= fa_icon "chevron-right"
            %li
              購入した商品・取引中
              %i= fa_icon "chevron-right"
            %li
              購入した商品・過去の取引
              %i= fa_icon "chevron-right"
            %li
              ニュース一覧
              %i= fa_icon "chevron-right"
            %li
              評価一覧
              %i= fa_icon "chevron-right"
            %li
              ガイド
              %i= fa_icon "chevron-right"
            %li
              お問い合わせ
              %i= fa_icon "chevron-right"
        .left__center
          メルペイ
          .left__center__box
            %li
              売上・振込申請
              %i= fa_icon "chevron-right"
            %li
              ポイント
              %i= fa_icon "chevron-right"
        .left__bottom
          設定
          .left__bottom__box
            %li
              プロフィール
              %i= fa_icon "chevron-right"
            %li
              発送元・お届け先住所変更
              %i= fa_icon "chevron-right"
            %li
              支払い方法
              %i= fa_icon "chevron-right"
            %li
              メール/パスワード
              %i= fa_icon "chevron-right"
            %li
              本人情報
              %i= fa_icon "chevron-right"
            %li
              電話番号の確認
              %i= fa_icon "chevron-right"
            %li
              ログアウト
              %i= fa_icon "chevron-right"
  = render 'items/footer'

.sell-icon
  = link_to "" do
    .red-circle
      %p.text 出品
      = fa_icon 'camera', class: "camera"
