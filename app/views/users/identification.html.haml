.indenti-header
  = render "shared/header-login" 
  .indenti-wrapper
    .indenti-crumbs
      - breadcrumb :indentification
      = render "layouts/breadcrumbs"
    .clearfix
      = render 'shared/sell-icon'
      
      .indenti-container
        .indenti-content
          .mypage-indenti
            %h2.indenti-chapter 本人情報の登録
            %form.indenti_forms1
            = form_with model: @user, class: :indenti_forms ,local: true do |f|
              %div
                %p
                  お客さまの本人情報をご登録ください。
                  %br>/
                  登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
                %p.text-right
                  = link_to "本人確認書類のアップロードについて", "https://www.yahoo.co.jp/"
                  %i.icon-arrow-right
                    = fa_icon "chevron-right"
              %div.indenti-form
                %label お名前
                %p
                  = current_user.family_name
                  = current_user.last_name
              %div.indenti-form
                %label お名前カナ
                %p
                  = current_user.j_family_name
                  = current_user.j_last_name
              %div.indenti-form
                %label 生年月日
                %p
                  = @birthday1
                  年
                  = @birthday2
                  月
                  = @birthday3
                  日
              %div.indenti-form
                %label 郵便番号
                %span.form-arbitray 任意
                %br>/
                %input.input-default{placeholder:current_user.address.postal_code , type: "text", value: ""}/
              %div.indenti-form
                %label 都道府県
                %span.form-arbitray 任意
                %div.select-wrap
                  %i.icon-arrow-bottom 
                    = fa_icon "chevron-down"
                  .form-select
                    = f.collection_select :prefecture_id, Prefecture.all, :id, :name

              %div.indenti-form
                %label 市区町村
                %span.form-arbitray 任意
                %br>/
                %input.input-default{type: "text", name: "city", placeholder: current_user.address.city}
              %div.indenti-form
                %label 番地
                %span.form-arbitray 任意
                %br>/
                %input.input-default{type: "text", name: "address1", placeholder: current_user.address.banti}
              %div.indenti-form
                %label 建物名
                %span.form-arbitray 任意
                %br/
                %input.input-default{type: "text", name: "address2", placeholder: current_user.address.building_name}
              %button.btn-indenti{type: "submit"}登録する
              .indenti-form-text
                = link_to "本人情報の登録について", "https://www.yahoo.co.jp/"
                %i.icon-arrow-right
                  = fa_icon "chevron-right"
        .indenti-side
          = render "shared/sidebar"
  .indenti-banner
    = render "shared/footer"
