.sale__item.crearfix
  .sale__item--top
    = render "/shared/header-login"
  .sale__item__sidebar
    = render "/shared/sidebar"
  .sale__item--redcircle
    = render "/shared/sell-icon"
    .sale__item__box
      .sale__item__box__main
        出品した商品
      .sale__item__box__sale
        = link_to "出品した商品・出品中", selling_items_user_path, class: "note"
      .sale__item__box__sell
        = link_to "出品した商品・取引中", selling_user_path, class: "note"
      .sale__item__box__sold
        = link_to "出品した商品・売却済み", sold_user_path, class: "note"
      .sale__item__box__list
        .saling
        - if @items.present?
          - @items.each do |item|
            .saling__all
              = item.name
        - else
          .saling__else
            = image_tag "logo_white.svg", height: '120px', width: '120px', class: 'free-logo'
          .saling__else2
            出品中の商品がありません
  .sale__item--bottom
    = render "/shared/footer"