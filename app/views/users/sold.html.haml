.sold__item.crearfix
  .sold__item--top
    = render "/shared/header-login"
  .sold__item__sidebar
    = render "/shared/sidebar"
  .sold__item--redcircle
    = render "/shared/sell-icon"
    .sold__item__box
      .sold__item__box__main
        出品した商品
      .sold__item__box__sale
        = link_to "出品中", selling_items_user_path, class: "note"
      .sold__item__box__sell
        = link_to "取引中", selling_user_path, class: "note"
      .sold__item__box__sold
        = link_to "売却済み", sold_user_path, class: "note"
      .sold__item__box__list
        .soldx
          - if @items.present?
            - @items.each do |item|
              .soldx__all
                = item.name
          - else
            .soldx__else
              = image_tag "logo_white.svg", height: '120px', width: '120px', class: 'free-logo'
            .soldx__else2
              売却済みの商品がありません
  .sold__item--bottom
    = render "/shared/footer"