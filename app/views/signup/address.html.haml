.contents
  .header
    .fmarket
      .fmarket__box
        = link_to root_path do
          = image_tag "fmarket_logo_red.svg",class: "logo"
    .clearfix_a
      .progress-bar1a
        .progress-bar1a__0
          会員情報
        .progress-bar1a__x
      .progress-bar2a
        電話番号認証
        .progress-bar2a__x
      .progress-bar3a
        お届け先住所入力
        .progress-bar3a__x
      .progress-bar4a
        支払い方法
        .progress-bar4a__x
      .progress-bar5a
        .progress-bar5a__0
          完了
        .progress-bar5a__x
  .single
  = form_for @user,url: card_signup_index_path , method: :get, html:{class: 'single'} do |f|
    = f.fields_for :address do |a|
      .single__head
        %h1
          お届け先住所入力
      .single-box
        .single-box15
          %li
            お名前(全角)
          .single-box16
            必須
          = a.text_field :family_name, placeholder: "例) 山田", type: "text", class: "input-default"
          = a.text_field :last_name, placeholder: "例) 彩", type: "text", class: "input-default2"
        .single-box15
          %li
            お名前カナ(全角)
          .single-box17
            必須
          = a.text_field :family_name, placeholder: "例) ヤマダ", type: "text", class: "input-default"
          = a.text_field :last_name, placeholder: "例) アヤ", type: "text",class: "input-default2"
        .single-box18
          %li
            郵便番号
          .single-box19
            必須
          = a.text_field :postal_code, placeholder: "例) 123-4567", type: "text",class: "input-default"
        .single-box18
          %li
            都道府県
          .single-box19
            必須
          .areaselect
            = a.collection_select :prefecture_id, Prefecture.all, :id, :name
            .ic
              = fa_icon "chevron-down"
        .single-box18
          %li
            市区町村
          .single-box19
            必須
          = a.text_field :city, placeholder: "例) 横浜市緑区", type: "text",class: "input-default"
        .single-box20
          %li
            番地
          .single-box21
            必須
          = a.text_field :banti, placeholder: "例) 青山1-1-1", type: "text",class: "input-default"
        .single-box22
          %li
            建物名
          .single-box23
            任意
          = a.text_field :building_name, placeholder: "例) 柳ビル103", type: "text",class: "input-default"
        .single-box20
          %li
            電話
          .single-box25
            任意
          = a.text_field :phone_number, placeholder: "例) 09012345678", type: "text",class: "input-default"
        .button_box2
          = f.submit "次へ進む", class: "btn-default btn-red"
  .footer
    %ul.footer__box
      %li= link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
      %li= link_to "フリマ利用規約", "https://www.mercari.com/jp/tos/"
      %li= link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    .footer__box2
      = link_to root_path do
        = image_tag "fmarket_logo_white.svg" , height: "60", width: "150"
    .footer__box3
      © 2019 Mercari