.contents
  .header
    .fmarket
      .fmarket__box
        = link_to root_path do
          = image_tag "fmarket_logo_red.svg",class: "logo"
    .clearfix_c
      .progress-bar1c
        .progress-bar1c__0
          会員情報
        .progress-bar1c__x
      .progress-bar2c
        電話番号認証
        .progress-bar2c__x
      .progress-bar3c
        お届け先住所入力
        .progress-bar3c__x
      .progress-bar4c
        支払い方法
        .progress-bar4c__x
      .progress-bar5c
        .progress-bar5c__0
          完了
        .progress-bar5c__x
  .single
  = form_for @user,url: signup_index_path , method: :post, html:{class: 'single'} do |f|
    = f.fields_for :pay do |c|
      .single__head
        %h1
          支払い方法
      .single-box
        .single-box24
          %li
            カード番号
          .single-box25
            必須
          = c.text_field :card_number, placeholder: "半角数字のみ", type: "text", class: "input-default"
        .ic2
          .card1
          .card2
          .card3
          .card4
          .card5
          .card6
          .card7
        .single-box26
          %li
            有効期限
          .single-box27
            必須
          = c.collection_select :deadline_month_id, DeadlineMonth.all, :id, :name
          = c.collection_select :deadline_year_id, DeadlineYear.all, :id, :name
          .ic3
            = fa_icon "chevron-down"
          .ic4
            = fa_icon "chevron-down"
        .single-box28
          %li
            セキュリティコード
          .single-box29
            必須
          = c.text_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号", type: "text", class: "input-default"
        .message4
          %p
            %a{:href => "/jp/help_center/article/244/", target: "_blank"}> カード裏面の番号とは？
        .button_box3
          = f.submit "次へ進む", class: "btn-default btn-red"
  .footer
    %ul.footer__box
      %li= link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
      %li= link_to "フリマ利用規約", "https://www.mercari.com/jp/tos/"
      %li= link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    .footer__box2
      = link_to root_path do
        = image_tag "fmarket_logo_white.svg" , height: "60", width: "150"
    .footer__box3
      © 2019 Mercari